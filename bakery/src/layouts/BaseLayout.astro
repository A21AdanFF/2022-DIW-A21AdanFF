---
import Fa from "svelte-fa/src/fa.svelte";
import { faHome } from "@fortawesome/free-solid-svg-icons";
let currentLanguage = "GL";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <style is:global>
      .dropdown {
        @apply relative;
      }
      .dropdown-content {
        display: none;
        @apply absolute;
      }
      .dropdown:hover .dropdown-content {
        display: grid;
      }
    </style>
    <title>Astro</title>
  </head>
  <body>
    <main class="grid auto-rows-max bg-bakery-primary min-h-screen h-fit">
      <nav class="flex justify-between items-center bg-bakery-dark h-fit px-4">
        <div class="flex">
          <h1 class="font-poppins">Logo</h1>
        </div>
        <div class="flex">
          <div
            class="px-2 py-3 flex justify-center items-center hover:bg-bakery-light"
          >
            <a href="/"><Fa client:visible icon={faHome} /></a>
          </div>
          <div
            class="px-2 py-3 flex justify-center items-center hover:bg-bakery-light"
          >
            <a href="/contact">Contact</a>
          </div>
          <div
            class="px-2 py-3 flex justify-center items-center hover:bg-bakery-light"
          >
            <a>About</a>
          </div>
        </div>
        <div class="flex">
          <div class="dropdown cursor-pointer">
            <span class="dropbtn">{currentLanguage}</span>
            <div class="dropdown-content">
              <span>GL</span><span>ES</span>
            </div>
          </div>
        </div>
      </nav>
      <div
        class="grid grid-cols-1 md:grid-cols-3 justify-center px-20 py-4 gap-2"
      >
        <slot />
      </div>
    </main>
  </body>
</html>
